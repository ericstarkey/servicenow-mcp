# =============================================================================
# ServiceNow MCP Server — Environment Variables
# Copy this file to .env and fill in your values.
# =============================================================================

# ---------------------------------------------------------------------------
# Required — ServiceNow Instance
# ---------------------------------------------------------------------------
SERVICENOW_INSTANCE_URL=https://your-instance.service-now.com

# ---------------------------------------------------------------------------
# Authentication Type
# Options: basic | oauth | api_key  (default: basic)
# ---------------------------------------------------------------------------
SERVICENOW_AUTH_TYPE=basic

# ---------------------------------------------------------------------------
# Basic Authentication (SERVICENOW_AUTH_TYPE=basic)
# ---------------------------------------------------------------------------
SERVICENOW_USERNAME=your-username
SERVICENOW_PASSWORD=your-password

# ---------------------------------------------------------------------------
# API Key Authentication (SERVICENOW_AUTH_TYPE=api_key)
# ---------------------------------------------------------------------------
SERVICENOW_API_KEY=your-servicenow-api-key
# Optional: custom header name sent to ServiceNow (default: X-ServiceNow-API-Key)
SERVICENOW_API_KEY_HEADER=X-ServiceNow-API-Key

# ---------------------------------------------------------------------------
# OAuth Authentication (SERVICENOW_AUTH_TYPE=oauth)
# ---------------------------------------------------------------------------
SERVICENOW_CLIENT_ID=your-oauth-client-id
SERVICENOW_CLIENT_SECRET=your-oauth-client-secret
# OAuth also requires username + password for the password grant flow
# SERVICENOW_USERNAME=your-username
# SERVICENOW_PASSWORD=your-password
# Optional: override the token endpoint (default: <instance_url>/oauth_token.do)
SERVICENOW_TOKEN_URL=https://your-instance.service-now.com/oauth_token.do

# ---------------------------------------------------------------------------
# Inbound API Key — Protects the /sse endpoint
# Set this to a strong random secret. The MCP client (e.g. OpenAI platform)
# must send this key as:  Authorization: Bearer <value>
# OR as the header named by MCP_SERVER_API_KEY_HEADER.
# If not set, the /sse endpoint is unprotected (not recommended in production).
# ---------------------------------------------------------------------------
MCP_SERVER_API_KEY=your-strong-random-secret
# Optional: use a custom header instead of Authorization Bearer
# MCP_SERVER_API_KEY_HEADER=X-API-Key

# ---------------------------------------------------------------------------
# Tool Package
# Which set of tools to expose. Options defined in config/tool_packages.yaml.
# Options: full | service_desk | catalog_builder | change_coordinator |
#          knowledge_author | platform_developer | system_administrator |
#          agile_management | none   (default: full)
# ---------------------------------------------------------------------------
MCP_TOOL_PACKAGE=full

# ---------------------------------------------------------------------------
# Advanced / Optional
# ---------------------------------------------------------------------------
# SERVICENOW_DEBUG=false
# SERVICENOW_TIMEOUT=30
# SCRIPT_EXECUTION_API_RESOURCE_PATH=
# TOOL_PACKAGE_CONFIG_PATH=config/tool_packages.yaml
